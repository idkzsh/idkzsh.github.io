<style>
  dialog::backdrop {
    @apply bg-black/50 backdrop-blur-md;
  }

  dialog[open] {
    @apply animate-[modal-pop-in_0.15s_ease-out];
  }

  dialog[closing] {
    @apply animate-[modal-pop-out_0.15s_ease-in];
  }

  @keyframes modal-pop-in {
    from {
      opacity: 0;
      transform: scale(0);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes modal-pop-out {
    from {
      opacity: 1;
      transform: scale(1);
    }
    to {
      opacity: 0;
      transform: scale(0);
    }
  }
</style>

<dialog 
  id="modal-dialog" 
  class="w-[360px] sm:w-[360px] md:w-[765px] h-[75%] sm:h-[75%] md:h-80 lg:h-80 rounded-md bg-background p-4 outline-none"
  hx-on:click="if(event.target === this) { this.setAttribute('closing', ''); this.addEventListener('animationend', function() { this.removeAttribute('closing'); this.close(); }, {once: true}); }"
>
  <div class="flex flex-wrap justify-center gap-4">
    <div
      class="flex flex-col bg-modal-content-bg justify-center items-center w-[350px] h-[22%] md:h-[135px] shadow-lg rounded-md text-primary cursor-pointer"
      hx-get="/projects"
      hx-target="#target"
      hx-swap="innerHTML swap:.3s transition:true"
      hx-on:click="
        const dialog = event.target.closest('dialog');
        if (dialog) {
          dialog.setAttribute('closing', '');
          dialog.addEventListener('animationend', () => {
            dialog.removeAttribute('closing');
            dialog.close();
          }, {once: true});
        }
      "
    >
      <span class="font-medium w-full p-4">Projects</span>
      <span class="w-full p-4 font-light">Stuff i've built</span>
    </div>
    <div
