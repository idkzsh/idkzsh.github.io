<style>
    .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5); /* Adjust the opacity for darkness */
      backdrop-filter: blur(10px); /* Adjust the blur intensity */
      z-index: 40; /* Ensure the overlay is behind the modal */
    }
  </style>
  
